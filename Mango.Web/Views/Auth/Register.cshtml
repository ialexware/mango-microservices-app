@model RegistrationRequiredDto

<form method="post">
    <div class="container border border-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <input asp-for="FirstName" class="form-control" placeholder="First name..." />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number..." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option value="">---Select a role---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 form-group">
                <button type="submit" class="form-control btn btn-success" value="submit">Register</button>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}